{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/anonce/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/anonce/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/anonce",
  "projects": {
    "anonce": {
      "type": "application",
      "root": "apps/anonce",
      "entryFile": "main",
      "sourceRoot": "apps/anonce/src",
      "compilerOptions": {
        "tsConfigPath": "apps/anonce/tsconfig.app.json"
      }
    },
    "voting-app": {
      "type": "application",
      "root": "apps/voting-app",
      "entryFile": "main",
      "sourceRoot": "apps/voting-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/voting-app/tsconfig.app.json"
      }
    },
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    }
  }
}